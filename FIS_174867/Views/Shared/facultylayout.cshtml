<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Faculty Information System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Faculty Information System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Publication", "Index", "Faculty")</li>
                    <li>@Html.ActionLink("Personal Information", "Indexinfo", "Faculty")</li>
                    <li>@Html.ActionLink("Work History", "IndexWorkHistory", "Faculty")</li>
                    <li>@Html.ActionLink("Course Taught", "IndexCourseTaught", "Faculty")</li>
                    <li>@Html.ActionLink("Course Grants", "IndexGrant", "Faculty")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Faculty")</li>
                </ul>
                <ul class="nav navbar-right">
                    <li>@Html.ActionLink(@Session["UserName"].ToString(), "Home", "Faculty") </li>
                </ul>
            </div>
        </div>
    </div>
    <body style="background-image:url('../../images/background.png'); background-repeat: no-repeat; background-size:cover; background-color:aliceblue;height:950px;margin:0">
    </body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Revati Chaudhari</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>